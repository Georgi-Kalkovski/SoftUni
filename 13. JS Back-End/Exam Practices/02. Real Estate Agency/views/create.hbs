<section id="create-page">
    <div class="create-container">
        <div class="box-image"></div>

        <h2 class="box-heading"> Add new home</h2>

        {{#with data}}
        <form class="form" action="/create" method="post">
            <div class="input">
                <input type="text" class="input-field" id="home-name" placeholder="Real House Luxury Villa..."
                    name="name" value="{{name}}" />
                <label class="home-name">Name:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="type" placeholder="Villa..." name="type" value="{{type}}" />
                <label class="type">Property Type:</label>
            </div>
            <div class="input">
                <input type="number" class="input-field" id="year" placeholder="2018..." name="year" value="{{year}}" />
                <label class="year">Year Built:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" value="{{city}}" />
                <label class="city">City</label>
            </div>

            <div class="input">
                <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="homeImage"
                    value="{{homeImage}}" />
                <label class="homeImage">Home Image:</label>
            </div>
            <div class="input">
                <input type="text" class="input-field" id="description" placeholder="Description..." name="description"
                    value="{{description}}" />
                <label class="description">Property Description:</label>
            </div>
            <div class="input">
                <input type="number" class="input-field" id="availablePieces" placeholder="1" name="availablePieces"
                    value="{{availablePieces}}" />
                <label class="availablePieces">Available pieces:</label>
            </div>

            <div class="create-action">
                <button class="create-button">Add</button>
            </div>
        </form>

        {{/with}}
    </div>
</section