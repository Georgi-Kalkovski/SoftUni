{{#with publication}}
<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">
        <article class="details-card-text">
            <h2>Title:<br> {{title}}</h2>
            <h3>Author: {{username}}</h3>
            <h3>Painting technique: {{tech}}</h3>
            <h3>Certificate of authenticity: {{certificate}}</h3>

            {{#if hasUser}}
            <div class="buttons">

                {{#if isAuthor}}
                <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{_id}}" class="btn-delete">Delete</a>

                {{else}}

                {{#if hasShared}}
                <p class="shared-pub">You already shared this publication</p>
                {{else}}
                <a href="/share/{{_id}}" class="btn-share">Share publication</a>
                {{/if}}

                {{/if}}
            </div>
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{picture}}" alt="art-image2">
        </article>

    </article>
</section>
{{/with}}