@model CinemaWorld.Models.InputModels.AdministratorInputModels.Directors.DirectorCreateInputModel
@{
    this.ViewData["Title"] = "Create Director";
    this.ViewData["ActivePage"] = DirectorNavPages.Directors;
}

<div class="row">
    <div class="col-md-6">
        <form asp-area="Administration" asp-controller="Directors" asp-action="Create" method="post">
            <h4>Create new director</h4>
            <hr />
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Create director</button>
        </form>
    </div>
</div>