@model CinemaWorld.Models.InputModels.AdministratorInputModels.News.NewsCreateInputModel
@{
    this.ViewData["Title"] = "Create News";
    this.ViewData["ActivePage"] = NewsNavPages.News;
}

<div class="row">
    <div class="col-md-6">
        <form asp-area="Administration" asp-controller="News" asp-action="Create" enctype="multipart/form-data" method="post">
            <h4>Create new news</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription"></label>
                <textarea asp-for="ShortDescription" class="form-control"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea id="description" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" type="file" name="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Create news</button>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "#description",
            plugins: [
                "image paste table link code media"
            ]
        });
    </script>
}