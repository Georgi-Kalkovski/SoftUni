@model CinemaWorld.Models.ViewModels.Cinemas.CinemaEditViewModel
@{
    this.ViewData["Title"] = "Edit Cinema";
    this.ViewData["ActivePage"] = CinemaNavPages.Cinemas;
}

<div class="row">
    <div class="col-md-6">
        <form asp-area="Administration" asp-controller="Cinemas" asp-action="Edit" method="post">
            <h4>Edit <b>@Model.Name</b> cinema with id: @Model.Id</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Edit cinema</button>
            <button asp-area="Administration" asp-controller="Cinemas" asp-action="GetAll" class="btn btn-primary">Back to all cinemas</button>
        </form>
    </div>
</div>