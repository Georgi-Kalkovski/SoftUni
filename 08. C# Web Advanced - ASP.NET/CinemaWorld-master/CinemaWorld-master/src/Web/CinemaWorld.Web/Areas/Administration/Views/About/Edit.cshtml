@model CinemaWorld.Models.ViewModels.About.FaqEditViewModel
@{
    this.ViewData["Title"] = "Edit faq";
    this.ViewData["ActivePage"] = FaqNavPages.About;
}

<div class="row">
    <div class="col-md-6">
        <form asp-area="Administration" asp-controller="About" asp-action="Edit" method="post">
            <h4>Edit FAQ with id: @Model.Id</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Question"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answer"></label>
                <textarea asp-for="Answer" class="form-control"></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Edit faq</button>
            <button asp-area="Administration" asp-controller="About" asp-action="GetAll" class="btn btn-primary">Back to all faqs</button>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "image paste table link code media"
            ]
        });
    </script>
}